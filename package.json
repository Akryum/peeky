{
  "name": "peeky-mono-repo",
  "version": "0.3.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "url": "https://github.com/Akryum/peeky.git",
    "type": "git"
  },
  "scripts": {
    "lint": "eslint . --ext js,vue,ts",
    "build": "lerna run build",
    "link": "lerna link",
    "watch": "yarn build && lerna run watch --parallel",
    "test": "lerna run test --parallel",
    "release": "yarn lint && yarn build && yarn test && lerna publish && yarn changelog",
    "changelog": "node ./scripts/update-version.mjs && conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md && git commit -m \"chore: changelog\" && git push",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "@vue/eslint-config-standard": "^5.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.18.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.4.1",
    "lerna": "^3.22.1",
    "postcss": "^8.2.4",
    "postcss-nested": "^5.0.3",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.0.2",
    "vitepress": "^0.16.1"
  }
}
