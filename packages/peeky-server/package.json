{
  "name": "@peeky/server",
  "version": "0.1.8",
  "description": "Server for Peeky, the testing framework for curious minds",
  "license": "MIT",
  "author": {
    "name": "Guillaume Chau"
  },
  "repository": {
    "url": "https://github.com/Akryum/peeky.git",
    "type": "git",
    "directory": "packages/peeky-server"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "yarn run gen && rimraf dist && tsc -d --emitDeclarationOnly && cp src/context.d.ts dist/context.d.ts && node esbuild.js",
    "gen": "rimraf dist src/generated && tsc && cp src/context.d.ts dist/context.d.ts && node ./dist/standalone.js --nexus-artifacts --nexus-exit",
    "watch": "tsc -d -w --sourceMap"
  },
  "dependencies": {
    "@peeky/client-dist": "^0.1.8",
    "@peeky/config": "^0.1.6",
    "@peeky/reactive-fs": "^0.1.6",
    "@peeky/runner": "^0.1.6"
  },
  "devDependencies": {
    "@types/node": "^14.14.21",
    "@types/shortid": "^0.0.29",
    "ansi_up": "^5.0.1",
    "apollo-server-express": "^2.19.2",
    "chokidar": "^3.5.1",
    "consola": "^2.15.0",
    "express": "^4.17.1",
    "express-history-api-fallback": "^2.2.1",
    "fs-extra": "^9.0.1",
    "graphql": "^15.4.0",
    "launch-editor": "^2.2.1",
    "nexus": "^1.0.0",
    "project-name-generator": "^2.1.9",
    "random-emoji": "^1.0.2",
    "shortid": "^2.2.16",
    "slugify": "^1.6.0",
    "typescript": "^4.1.3"
  }
}
